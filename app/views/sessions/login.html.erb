<div class="login_wrapper fixed_portion float_left">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="login_top_box float_left">
          <div class="login_banner_wrapper" style="background-image: url(<%= asset_path('login.jpg') %>);">
          </div>
          <div class="login_form_wrapper">
            <div class="sv_heading_wraper heading_wrapper_dark dark_heading hwd">

              <h3> login to enter</h3>

            </div>
            <%= form_with(scope: :session, url: create_path, id: 'myForm') do |f| %>

          <div class="form-group icon_form comments_form">

              <input type="text" class="form-control require" name="email" placeholder="Email Address*" required>

            </div>
            <div class="form-group icon_form comments_form">

              <input type="password" class="form-control require" name="password"  placeholder="Password *" required>

            </div>
            <div class="login_remember_box">
              <label class="control control--checkbox">Remember me
                <input type="checkbox">
                <span class="control__indicator"></span>
              </label>
              <a href="#" class="forget_password">
                Forgot Password
              </a>
            </div>
            <div class="about_btn login_btn float_left">

              <a href="javascript:void(0);" onclick="document.getElementById('myForm').submit();">Login</a>
            </div>

          <% end %>
            <div class="dont_have_account float_left">
              <p>Don’t have an account ? <a href="<%= register_path %>">Sign up</a></p>
            </div>
          </div>
