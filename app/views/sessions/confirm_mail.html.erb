    }

    .btn::before {
        content: '';
        position: relative;
        top: 15px;
        left: 30px;
        width: 20px;
        height: 20px;
        border-radius: 50%;
        background: #fff;
        opacity: 0.45;
        border-radius: 44% 56% 65% 35% / 57% 58% 42% 43%;
    }

    @media (max-width: 576px) {
        .btn {
            margin-left: 0;
            margin-top: -154px;
            width: 80px;
            margin-left: 215px;
        }

        .custom-container .drop {
            width: 350px;
            height: 350px;
        }

        .custom-container .drop .content form .input-box {
            width: 200px;
        }

        .custom-container .drop .content form .input-box:last-child {
            width: 120px;
        }

        .custom-container .drop .content form .input-box:last-child:hover {
            width: 130px;
        }

        .custom-container .drop::before{
            content: '';
            position: absolute;
            top: 10px;
            left: 85px;
            width: 35px;
            height: 35px;
            border-radius: 50%;
            background: #fff;
            opacity: 0.9;

        }

        .size {
            font-size: 30px;
        }
    }

